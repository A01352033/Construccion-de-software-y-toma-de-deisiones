<%- include('add/header.ejs') %>


    <h2>Pedidos </h2>

    <h3>Haz tu pedido aqui...</h3>
    <section>
        <form action="/tacos/ordenar" method="POST">
            <p>De qué taquería quieres?</p>
            <select id="Sucursal" >
                <option value="" selected disabled>Seleccione una sucursal</option>
                <option value="Norte">Norte</option>
                <option value="Centro">Centro</option>
                <option value="Sur">Sur</option>
            </select>
            <br>
            <br>

            <p>De qué tacos quieres?</p>
            <input type="checkbox" id="Bisteck" name="Bisteck" value="Bisteck" onchange="mostrarInput()">
            <label for="Bisteck">Bisteck</label>
            <div id="input">
                <input type="number" id="BisteckNumber" name="BisteckNumber" placeholder="Cuantos?" min="0"><br>
            </div>
            <br>

            <input type="checkbox" id="Pastor" name="Pastor" value="Pastor" onchange="mostrarInput()">
            <label for="Pastor">Pastor</label>
            <div id="input">
                <input type="number" id="PastorNumber" name="PastorNumber" placeholder="Cuantos?" min="0"><br>
            </div>
            <br>

            <input type="checkbox" id="Chorizo" name="Chorizo" value="Chorizo" onchange="mostrarInput()">
            <label for="Chorizo">Chorizo</label>
            <div id="input">
                <input type="number" id="ChorizoNumber" name="ChorizoNumber" placeholder="Cuantos?" min="0"><br>
            </div>
            <br>

            <input type="checkbox" id="Asada" name="Asada" value="Asada" onchange="mostrarInput()">
            <label for="Asada">Asada</label>
            <div id="input">
                <input type="number" id="AsadaNumber" name="AsadaNumber" placeholder="Cuantos?" min="0"><br>
            </div>
            <br>

            <input type="checkbox" id="Carnitas" name="Carnitas" value="Carnitas" onchange="mostrarInput()">
            <label for="Carnitas">Carnitas</label>
            <div id="input">
                <input type="number" id="CarnitasNumber" name="CarnitasNumber" placeholder="Cuantos?" min="0"><br>
            </div>

            <br><br>

            <label for="Nombre">Nombre: </label><br>
            <input type="text" id="Nombre" name="Nombre">

            <br><br>

            <label for="Direccion">Dirección: </label><br>
            <input type="text" id="Direccion" name="Direccion">

            <br><br>

            <button type="submit" name="action" class="button">Enviar pedido</button>

            <br><br>
        </form>
    </section>
    <a href="/tacos">
        <button class="button">Back</button>
    </a>
    <script>
        function mostrarInput() {
            var checkboxes = document.querySelectorAll('input[type="checkbox"]');
            var inputs = document.querySelectorAll('input[type="number"]');
            
            for (var i = 0; i < checkboxes.length; i++) {
                var checkbox = checkboxes[i];
                var input = inputs[i];
                
                if (checkbox.checked) {
                    input.style.display = "block";
                } else {
                    input.style.display = "none";
                }
            }
        }
    </script>

